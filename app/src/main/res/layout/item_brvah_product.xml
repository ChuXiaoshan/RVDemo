<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/red500"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/qiv_product"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@mipmap/wallhaven_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.4"
                    app:qmui_corner_radius="8dp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLength="200"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingLeft="10dp"
                    android:text="产品名称产品名称产品名称产品名称"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_price_1"
                    app:layout_constraintLeft_toRightOf="@+id/qiv_product"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_yellow_corner_4dp"
                    android:gravity="center"
                    android:lineSpacingExtra="0dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="券面值\n￥100"
                    android:textColor="#b41430"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/ll_price_4"
                    app:layout_constraintLeft_toRightOf="@+id/qiv_product"
                    app:layout_constraintRight_toLeftOf="@+id/tv_price_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

                <TextView
                    android:id="@+id/tv_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_yellow_corner_4dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="券面值\n￥100"
                    android:textColor="#b41430"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_price_1"
                    app:layout_constraintLeft_toRightOf="@+id/tv_price_1"
                    app:layout_constraintRight_toLeftOf="@+id/tv_price_3"
                    app:layout_constraintTop_toTopOf="@+id/tv_price_1" />

                <TextView
                    android:id="@+id/tv_price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_yellow_corner_4dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="券面值\n￥100"
                    android:textColor="#b41430"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_price_1"
                    app:layout_constraintLeft_toRightOf="@+id/tv_price_2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_price_1" />

                <LinearLayout
                    android:id="@+id/ll_price_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/jiage_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_price_1"
                    app:layout_constraintRight_toRightOf="@+id/tv_price_3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_price_1">

                    <TextView
                        android:id="@+id/tv_price_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="券后价 ￥"
                        android:textColor="#b41430"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_price_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99.8"
                        android:textColor="#b41430"
                        android:textSize="24sp"
                        android:textStyle="italic|bold" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>

